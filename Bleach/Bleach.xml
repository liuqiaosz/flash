<?xml version="1.0" encoding="UTF-8"?>

<bleach>
	<system>
		<!-- 心跳间隔 -->
		<heartbeat>10000</heartbeat>
		<!-- 心跳超时 -->
		<heartbeattimeout>60000</heartbeattimeout>
		
		<!-- 服务器IP 端口 -->
		<remotehost>219.234.0.12</remotehost>
		<remoteport>33445</remoteport>
		
		<!-- 异常后重新连接尝试的次数 -->
		<reconnect>1</reconnect>
		
		<!-- 
			接入类型
			
			0:	平台
			1:	QQ
			2:	xx
		 -->
		<portal>0</portal>
	</system>

	<scenes>
		
		<!-- 登陆场景 -->
		<scene id="LoginScene" version="1.0" url="LoginScene.swf">
			<!-- 链接库 --> 
			<library id="LoginRes" version="1.0" url="login.swf" desc="UI资源" uilib="true" />
			<library id="LoginUI" version="1.0" url="UI.swf" desc="UI定义" />
		</scene>
		
		<!-- 角色选择场景 -->
		<scene id="ChooseRoleScene" version="1.0" url="ChooseRoleScene.swf">
			<library id="chooseRole" version="1.0" url="choose_role.swf" desc="资源" uilib="true" />
			<library id="effect" version="1.0" url="effect_chooserole.swf" desc="特效" />
			<library id="LoginUI" version="1.0" url="UI.swf" desc="UI定义" />
		</scene>
		
		<scene id="WorldScene" version="1.0" url="WorldScene.swf">
			<library id="UIRes" version="1.0" url="Worldmap.swf" desc="资源" uilib="true" />
			<library id="RoleRes" version="1.0" url="role.swf" desc="角色信息资源" uilib="true" />
			<library id="LoginUI" version="1.0" url="UI.swf" desc="UI定义" />
		</scene>
		
		<scene id="RoomSquareScene" version="1.0" url="RoomSquareScene.swf">
			<library id="UIRes" version="1.0" url="new_battle.swf" desc="资源" uilib="true" />
			<library id="UIRes2" version="1.0" url="creat_room.swf" desc="资源" uilib="true" />
			<library id="UI" version="1.0" url="UI.swf" desc="UI定义" />
		</scene>
		
		<scene id="RoomChallenge" version="1.0" url="ChallengeRoomScene.swf">
			<library id="UIRes" version="1.0" url="new_battle.swf" desc="资源" uilib="true" />
			<library id="UI" version="1.0" url="UI.swf" desc="UI定义" />
		</scene>
		
		<scene id="RoomAthletics" version="1.0" url="AthleticsScene.swf">
			<library id="UIRes" version="1.0" url="new_battle.swf" desc="资源" uilib="true" />
			<library id="UI" version="1.0" url="UI.swf" desc="UI定义" />
		</scene>
	</scenes>
</bleach>
