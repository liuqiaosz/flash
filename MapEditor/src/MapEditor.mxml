			protected var _LayerVec:Vector.<LayerShowcaseItem> = new Vector.<LayerShowcaseItem>();
			/**
			 * 图层面板数据更新
			 * 
			 * 
			 **/
			private function LayerShowcaseUpdate():void
			{
				if(LayerShowcase && GridWorld)
				{
					_LayerVec.length = 0;
					LayerShowcase.removeAllElements();
					var Vec:Vector.<WorldLayerItem> = GridWorld.Layers;
					var Layer:WorldLayerItem = null;
					var Item:LayerShowcaseItem = null;
					for each(Layer in Vec)
					{
						Item = new LayerShowcaseItem();
						Item.Item = Layer;
						Layer.Actived = false;
						LayerShowcase.addElement(Item);
						_LayerVec.push(Item);
					}
					Item.ActiveLayer();
				}
				
			}
			
