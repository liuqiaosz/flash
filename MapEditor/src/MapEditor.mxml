			[Bindable]
			protected var AssetBlockProvider:ArrayCollection = new ArrayCollection();
			private function InitializeAssetBlock():void
			{
				AssetBlockProvider.removeAll();
				var Dir:File = new File(Common.ASSETS);
				if(Dir.exists && Dir.isDirectory)
				{
					var FileArray:Array = Dir.getDirectoryListing();
					
					var Node:File = null;
					var Reader:FileStream = new FileStream();
					for each(Node in FileArray)
					{
						if(Node.extension == "asb")
						{
							Reader.open(Node,FileMode.READ);
							var Data:ByteArray = new ByteArray();
							Reader.readBytes(Data,0,Reader.bytesAvailable);
							var Item:AssetBlock = AssetBlockDecoder.Decode(Data);
							AssetBlockProvider.addItem(Item);
						}
					}
				}
			}
			
